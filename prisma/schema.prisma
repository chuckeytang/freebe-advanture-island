generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

model User {
    id       Int     @id @default(autoincrement())
    address  String  @unique
    nickname String?
    avatar   String?
}

model WalletVerificationCode {
  id        Int      @id @default(autoincrement())
  wallet    String   @unique
  code      String
  createdAt DateTime @default(now())
}